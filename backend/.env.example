# Configurações do Projeto
PROJECT_NAME=ERP Claude
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Configurações de Segurança
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Configurações de Banco de Dados
# Para desenvolvimento (SQLite)
DATABASE_URL=sqlite:///./erp_database.db

# Para produção (PostgreSQL) - descomente e configure
# DATABASE_URL=postgresql://erp_user:erp_password@postgres:5432/erp_db

# Configurações Redis
REDIS_URL=redis://redis:6379/0

# Configurações CORS - adicione suas origens permitidas
BACKEND_CORS_ORIGINS=["http://localhost:4200","http://localhost:4201","http://127.0.0.1:4200","https://localhost:4200"]

# Configurações de Usuário Padrão
FIRST_SUPERUSER=admin@example.com
FIRST_SUPERUSER_PASSWORD=changethis123
FIRST_SUPERUSER_NAME=Administrador do Sistema

# Configurações de Log
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Configurações de API
API_TIMEOUT=30
MAX_RETRIES=3
INTEGRATION_TIMEOUT=60
MAX_INTEGRATION_RETRIES=5

# Configurações de Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=[".pdf",".doc",".docx",".xls",".xlsx",".txt",".json",".xml"]

# Configurações de Servidor
HOST=0.0.0.0
PORT=8000

# Configurações de Desenvolvimento
USERS_OPEN_REGISTRATION=false